<%= simple_form_for([:admin, user]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :gender, collection: [
      [t('users.profile.genders.male'),:male],
      [t('users.profile.genders.female'),:female],
      [t('users.profile.genders.other'),:other],
      [t('users.profile.genders.not_specified'), :not_specified],
    ], label_method: :first, value_method: :second, label: t('users.profile.gender'), include_blank: false %>

    <%= f.input :birthday, as: :date, start_year: Date.today.year - 90,
                end_year: Date.today.year - 12,
                order: [:day, :month, :year], label: t('users.profile.birthday') %>
    <%= f.input :photo, label: t('users.profile.photo') %>
    <%= f.input :time_zone, label: t('users.profile.timezone') %>
  </div>

  <div class="form-actions mt-3">
    <%= f.submit "Update User" , class: "btn btn-primary" %>
  </div>
<% end %></br>
