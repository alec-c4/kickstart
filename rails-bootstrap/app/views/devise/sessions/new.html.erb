<div id="devise-form" class="form">
  <h2><%= t(".sign_in") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean, wrapper_html: { class: "form-check form-switch my-2" } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t(".sign_in"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render 'devise/shared/social_auth' %>

  <%= render "devise/shared/links" %>

</div>
