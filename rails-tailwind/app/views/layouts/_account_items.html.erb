<% if signed_in? %>
  <%= link_to t("navigation.whats_new"), announcements_path, class: "dropdown-item #{unread_announcements(current_user)}" %>

  <%= link_to t('navigation.account'), edit_user_registration_path %>
  <%= link_to t('navigation.profile_edit'), edit_profile_path %>
  <%= link_to t('navigation.profile_view'), profile_path(current_user) %>
  <%= link_to t('navigation.referrals_page'), referrals_path %>  
  <% if current_user != true_user %>
     <li><%= link_to "Back to admin", stop_impersonating_admin_users_path, method: :post %></li>
  <% else %>
    <%= link_to t('navigation.sign_out'), destroy_user_session_path, method: :delete %>
  <% end %>

<% else %>
  <%= link_to t('navigation.sign_up'), new_user_registration_path %>
  <%= link_to t('navigation.sign_in'), new_user_session_path %>
<% end %>